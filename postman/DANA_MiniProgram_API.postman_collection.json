					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"merchantTransId\": \"{{order_id}}\",\n    \"status\": \"FAILED\",\n    \"amount\": {\n        \"value\": \"50000.00\",\n        \"currency\": \"IDR\"\n    }\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/dana/webhook",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "dana", "webhook"]
						}
					},
					"response": []
