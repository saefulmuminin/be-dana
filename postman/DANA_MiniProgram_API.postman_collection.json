				{
					"name": "Finish Payment Callback",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/dana/finish-payment?orderId={{order_id}}&resultCode=9000&resultStatus=SUCCESS",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "dana", "finish-payment"],
							"query": [
								{
									"key": "orderId",
									"value": "{{order_id}}"
								},
								{
									"key": "resultCode",
									"value": "9000"
								},
								{
									"key": "resultStatus",
									"value": "SUCCESS"
								}
							]
						}
					},
					"response": []
				}
			]
		},
