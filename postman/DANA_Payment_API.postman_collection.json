		{
			"name": "Authentication (DANA OAuth)",
			"item": [
				{
					"name": "1. Generate OAuth URL",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.oauth_url) {",
									"    console.log('OAuth URL:', jsonData.data.oauth_url);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"redirect_url\": \"{{base_url}}/api/v1/auth/finish-redirect\",\n    \"mobile_number\": \"081234567890\",\n    \"external_id\": \"{{external_id}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/generate-oauth-url",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "generate-oauth-url"]
						},
						"description": "Generate URL untuk OAuth login ke DANA. User akan redirect ke URL ini untuk login."
					},
					"response": []
				},
				{
					"name": "2. Apply Token (Exchange Auth Code)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data) {",
									"    if (jsonData.data.access_token) {",
									"        pm.collectionVariables.set('dana_access_token', jsonData.data.access_token);",
									"    }",
									"    if (jsonData.data.refresh_token) {",
									"        pm.collectionVariables.set('dana_refresh_token', jsonData.data.refresh_token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"auth_code\": \"AUTH_CODE_DARI_REDIRECT\",\n    \"external_id\": \"{{external_id}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/apply-token",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "apply-token"]
						},
						"description": "Tukar auth_code dari DANA redirect menjadi access_token dan refresh_token"
					},
					"response": []
				},
				{
					"name": "3. Seamless Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.token) {",
									"    pm.collectionVariables.set('jwt_token', jsonData.data.token);",
									"    console.log('JWT Token saved!');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"access_token\": \"{{dana_access_token}}\",\n    \"refresh_token\": \"{{dana_refresh_token}}\",\n    \"expires_in\": 94608000,\n    \"external_id\": \"{{external_id}}\",\n    \"user_info\": {\n        \"name\": \"Test User\",\n        \"phone\": \"081234567890\",\n        \"email\": \"testuser@example.com\"\n    }\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/seamless-login",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "seamless-login"]
						},
						"description": "Login ke sistem setelah mendapat token dari DANA. Response berisi JWT token untuk auth selanjutnya."
					},
					"response": []
				},
				{
					"name": "4. Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.data && jsonData.data.access_token) {",
									"    pm.collectionVariables.set('dana_access_token', jsonData.data.access_token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh_token\": \"{{dana_refresh_token}}\",\n    \"external_id\": \"{{external_id}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/refresh-token",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "refresh-token"]
						},
						"description": "Refresh access token yang expired menggunakan refresh token"
					},
					"response": []
				},
				{
					"name": "5. Finish Redirect (Callback)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/finish-redirect?authCode=AUTH_CODE&externalId={{external_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "finish-redirect"],
							"query": [
								{
									"key": "authCode",
									"value": "AUTH_CODE"
								},
								{
									"key": "externalId",
									"value": "{{external_id}}"
								}
							]
						},
						"description": "Endpoint callback setelah user selesai OAuth di DANA"
					},
					"response": []
				}
			]
		},
